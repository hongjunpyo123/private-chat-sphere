<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, viewport-fit=cover">
    <title>채팅방</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        body {
            background-color: #f5f6f8;
            height: 100%;
            min-height: 100vh;
            min-height: -webkit-fill-available;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        html {
            height: -webkit-fill-available;
        }

        .chat-header {
            background-color: #3182f6;
            padding: 12px 16px;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .chat-container {
            flex: 1;
            padding: 16px;
            margin: 60px 0 30px 0;
            overflow-y: auto;
            position: fixed;
            top: 0;
            bottom: 80px;
            left: 0;
            right: 0;
        }

        .chat-input-container {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: white;
            padding: 12px;
            border-top: 1px solid #e1e1e1;
            display: flex;
            gap: 8px;
            z-index: 1000;
        }

        .back-button {
            color: white;
            text-decoration: none;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: background-color 0.2s;
        }

        .back-button:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .back-button svg {
            width: 20px;
            height: 20px;
        }

        .room-title {
            font-size: 16px;
            font-weight: bold;
        }

        .message {
            display: flex;
            flex-direction: column;
            margin-bottom: 16px;
        }

        .message.received {
            align-items: flex-start;
        }

        .message.sent {
            align-items: flex-end;
        }

        .message-sender {
            font-size: 12px;
            color: #666;
            margin-bottom: 4px;
            padding-left: 12px;
        }

        .message-content {
            max-width: 70%;
            padding: 8px 12px;
            border-radius: 12px;
            font-size: 14px;
            margin-bottom: 2px;
            word-break: break-all;
        }

        .message.received .message-content {
            background-color: white;
            border: 1px solid #e1e1e1;
        }

        .message.sent .message-content {
            background-color: #3182f6;
            color: white;
        }

        .message-time {
            font-size: 11px;
            color: #999;
            margin: 0 4px;
        }

        .chat-input {
            flex: 1;
            padding: 8px 12px;
            border: 1px solid #e1e1e1;
            border-radius: 20px;
            font-size: 14px;
            outline: none;
        }

        .chat-input:focus {
            border-color: #3182f6;
        }

        .send-button, .attach-button {
            background-color: #3182f6;
            color: white;
            border: none;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .send-button:hover, .attach-button:hover {
            background-color: #1c6feb;
        }

        .attach-button svg {
            width: 20px;
            height: 20px;
        }

        .date-divider {
            text-align: center;
            margin: 24px 0;
            position: relative;
        }

        .date-divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background-color: #e1e1e1;
            z-index: 1;
        }

        .date-text {
            background-color: #f5f6f8;
            padding: 0 12px;
            color: #999;
            font-size: 12px;
            position: relative;
            z-index: 2;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
<header class="chat-header">
    <a href="/main" class="back-button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
    </a>
    <div class="room-title">주제 : "{{chat.title}}"</div>
    <div style="width: 32px;"></div>
</header>

<div class="chat-container">
    {{#chatinfo}}
        <div class="message received">
            <div class="message-sender">{{writer}}</div>
            <div class="message-content">{{message}}</div>
            <div class="message-time">{{date}}</div>
        </div>
    {{/chatinfo}}
    {{^chatinfo}}
        <div class="message received">
            <div class="message-sender"></div>
            <div class="message-content">메세지가 없습니다</div>
            <div class="message-time">00:00</div>
        </div>
    {{/chatinfo}}
</div>

<div class="chat-input-container">
    <button class="attach-button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h7"/>
            <path d="M9 11V9a2 2 0 0 1 2-2h2m4.5-4L19 4.5"/>
            <path d="M15 8h6v6"/>
        </svg>
    </button>
    <form action="/chatMessageSend" method="post" style="display: flex; flex: 1; gap: 8px;">
        <input type="text" class="chat-input" placeholder="메시지를 입력하세요" autocomplete="off" name="message">
        <input type="hidden" name="chatRoomId" value="{{chat.id}}">
        <button type="submit" class="send-button">→</button>
    </form>
</div>

<script>

    const chatContainer = document.querySelector('.chat-container');

function updateChat() {
    fetch('/messageFindLast')
        .then(response => response.json())
        .then(msg => {
            if (msg !== null) {  // msg가 null이 아닐 때만 실행
                chatContainer.insertAdjacentHTML('beforeend', `
                    <div class="message received">
                        <div class="message-sender">${msg.writer}</div>
                        <div class="message-content">${msg.message}</div>
                        <div class="message-time">${msg.date}</div>
                    </div>
                `);
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        });
}

setInterval(updateChat, 1000);



history.pushState(null, null, location.href);
window.onpopstate = function () {
    history.go(1);
};

// 페이지 로딩 시 스크롤 맨 아래로
document.addEventListener('DOMContentLoaded', () => {
    const chatContainer = document.querySelector('.chat-container');
    if (chatContainer) {
        chatContainer.scrollTop = chatContainer.scrollHeight;
    }
});

// 전송 버튼 클릭 이벤트
document.querySelector('.send-button').addEventListener('click', sendMessage);

// 엔터 키 이벤트
document.querySelector('.chat-input').addEventListener('keypress', function (e) {
    if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
    }
});
</script>
</body>
</html>